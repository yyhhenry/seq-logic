{
  "name": "seq-logic",
  "version": "1.0.2",
  "description": "SeqLogic",
  "main": "dist/electron/main.js",
  "scripts": {
    "fn:vue-dev": "vite --port 3000",
    "fn:electron-dev": "cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true MODE='development' electron .",
    "fn:app-parallel-dev": "run-p fn:vue-dev fn:electron-dev",
    "fn:vite-compile": "vue-tsc --noEmit -p src/vue/tsconfig.json",
    "fn:vite-build-only": "vite build",
    "fn:electron-compile": "vite build --config vite-electron.config.ts",
    "fn:electron-package": "electron-builder",
    "fn:electron-build": "run-s fn:electron-compile fn:electron-package",
    "fn:vite-build": "run-s fn:vite-compile fn:vite-build-only",
    "preload-recompile": "run-s fn:electron-compile",
    "dev": "run-s fn:electron-compile fn:app-parallel-dev",
    "build": "run-s fn:vite-build fn:electron-build"
  },
  "build": {
    "productName": "SeqLogic",
    "files": [
      "dist",
      "resources"
    ],
    "directories": {
      "output": "electron-dist"
    },
    "win": {
      "icon": "resources/icon.png"
    },
    "extraFiles": [
      {
        "from": "extraFiles",
        "to": "extraFiles"
      }
    ],
    "linux": {
      "target": "snap",
      "icon": "resources/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "yyhhenry",
  "license": "ISC",
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@vueuse/core": "^9.13.0",
    "element-plus": "^2.3.3",
    "idb": "^7.1.1",
    "lodash": "^4.17.21",
    "sass": "^1.62.0",
    "uuid": "^9.0.0",
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.15.13",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-vue": "^4.1.0",
    "cross-env": "^7.0.3",
    "electron": "^23.2.4",
    "electron-builder": "^23.6.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.4",
    "vite": "^4.3.1",
    "vue-tsc": "^1.6.1"
  }
}
